<!--            android:layout_marginStart="4dp"-->
<!--            android:layout_marginEnd="5dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@color/main_color" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answer_images"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_below="@id/under_lines"
        >
        <ImageView
            android:id="@+id/ans_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/box14"
            android:layout_weight="1"
            android:background="@drawable/iqtest_ans_back"
            android:layout_marginStart="4dp"/>
        <ImageView
            android:id="@+id/ans_img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/box_ans12"
            android:layout_weight="1"
            android:background="@drawable/iqtest_ans_back"
            android:layout_marginStart="4dp"/>
        <ImageView
            android:id="@+id/ans_img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/box_ans11"
            android:layout_weight="1"
            android:background="@drawable/iqtest_ans_back"
            android:layout_marginStart="4dp"/>
        <ImageView
            android:id="@+id/ans_img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/box13"
            android:layout_weight="1"
            android:background="@drawable/iqtest_ans_back"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

    </LinearLayout>
</RelativeLayout>