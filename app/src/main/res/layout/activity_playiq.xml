<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yasiru5071.iqtest.PlayiqActivity">

    <LinearLayout
        android:id="@+id/count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp">
        <TextView
            android:id="@+id/count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:fontFamily="@font/tektonpro"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/24"
            android:textColor="@color/black"
            android:fontFamily="@font/tektonpro"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/count_layout"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/q_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box11"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/q_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box14"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/q_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box12"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/q_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box13"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/q_img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box12"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/q_img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box12"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/q_img7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box11"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/q_img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box14"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/question_mark"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/question_layout"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="5dp"
        android:alpha="0.3"
        android:background="@color/main_color" />

    <TextView
        android:id="@+id/answer_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/verdana"
        android:gravity="center_horizontal"
        android:text="Answers"
        android:textColor="@color/main_color"
        android:textSize="17dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/answer_txt"
        android:layout_marginStart="140dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="140dp"
        android:background="@color/main_color" />

    <LinearLayout
        android:id="@+id/answer_numbers"
        android:layout_below="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:fontFamily="@font/verdanab"
            android:textColor="@color/main_color"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="15dp"
            android:fontFamily="@font/verdanab"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/main_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="15dp"
            android:fontFamily="@font/verdanab"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/main_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="15dp"
            android:fontFamily="@font/verdanab"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/main_color"/>
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="5"-->
<!--            android:textSize="15dp"-->
<!--            android:fontFamily="@font/verdanab"-->
<!--            android:layout_weight="1"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:textColor="@color/main_color"/>-->
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="6"-->
<!--            android:textSize="15dp"-->
<!--            android:fontFamily="@font/verdanab"-->
<!--            android:layout_weight="1"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:textColor="@color/main_color"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/under_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_numbers"
        android:orientation="horizontal">

        <View
            android:layout_width="45dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/main_color" />

        <View
            android:layout_width="45dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/main_color" />

        <View
            android:layout_width="45dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/main_color" />

        <View
            android:layout_width="45dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/main_color" />

